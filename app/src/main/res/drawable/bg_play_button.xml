<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/robotics_red"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <gradient
                    android:startColor="@color/robotics_red"
                    android:endColor="@color/robotics_orange"
                    android:angle="90"/>
        </shape>
    </item>

</selector>