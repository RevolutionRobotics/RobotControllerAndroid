<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@android:color/black</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="RoboticsSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/ic_marker</item>
        <item name="android:progressDrawable">@drawable/robotics_seekbar_progress</item>
        <item name="android:splitTrack">false</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/jura_bold</item>
    </style>

    <style name="RoboticsEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/grey_28</item>
        <item name="android:textColorHint">@color/grey_8e</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:fontFamily">font/barlow_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ProgramButtonLabel">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/jura_bold</item>
    </style>

</resources>
