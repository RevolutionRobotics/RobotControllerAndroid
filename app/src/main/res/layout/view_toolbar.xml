<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <merge tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

        <View
                android:id="@+id/header_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_height"
                android:background="@color/grey_28"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
                android:id="@+id/header_border"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_border_size"
                android:scaleType="fitXY"
                android:src="@drawable/bg_header_menu"
                app:layout_constraintTop_toBottomOf="@id/header_background"/>

        <ImageView
                android:id="@+id/img_option_1"
                android:layout_width="@dimen/toolbar_icon_size"
                android:layout_height="@dimen/toolbar_icon_size"
                android:padding="@dimen/dimen_8dp"
                android:background="@drawable/bg_button_default"
                app:layout_constraintTop_toTopOf="@id/header_background"
                app:layout_constraintBottom_toBottomOf="@id/header_background"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:src="@drawable/ic_logo"/>

        <ImageView
                android:id="@+id/img_option_2"
                android:layout_width="@dimen/toolbar_icon_size"
                android:layout_height="@dimen/toolbar_icon_size"
                android:padding="@dimen/dimen_8dp"
                android:background="@drawable/bg_button_default"
                app:layout_constraintTop_toTopOf="@id/header_background"
                app:layout_constraintBottom_toBottomOf="@id/header_background"
                app:layout_constraintEnd_toStartOf="@id/img_option_1"
                android:layout_marginEnd="@dimen/dimen_32dp"
                android:src="@drawable/ic_community"/>

    </merge>

</layout>
