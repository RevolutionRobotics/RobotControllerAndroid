<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable name="infoViewModel"
                  type="com.revolution.robotics.features.configure.contoller.ControllerInfoDialog.ViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@{infoViewModel.title}"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:fontFamily="@font/jura_regular"
                android:textSize="20sp"
                android:textColor="@color/white"/>

        <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/title"
                android:layout_marginStart="@dimen/dimen_32dp"
                android:layout_marginEnd="@dimen/dimen_32dp"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/barlow_regular"
                android:text="@string/controller_info_dialog_description"/>


        <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="@dimen/dimen_16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description"
                android:layout_marginStart="@dimen/dimen_32dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_calendar"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@id/image"
                app:layout_constraintTop_toTopOf="@id/image"
                app:layout_constraintBottom_toBottomOf="@id/image"
                android:layout_marginEnd="@dimen/dimen_32dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:gravity="center_vertical"
                android:text="@{infoViewModel.date}"
                android:fontFamily="@font/barlow_medium"
                android:textSize="12sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>