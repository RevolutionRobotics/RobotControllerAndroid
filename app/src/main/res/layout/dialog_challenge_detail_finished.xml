<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/img_fireworks"
                android:layout_width="@dimen/dimen_64dp"
                android:layout_height="@dimen/dimen_64dp"
                android:layout_marginTop="@dimen/dimen_44dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/fireworks"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/img_fireworks"
                android:layout_marginStart="@dimen/dimen_32dp"
                android:layout_marginEnd="@dimen/dimen_32dp"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:fontFamily="@font/jura_regular"
                android:textAllCaps="true"
                android:text="@string/challenge_finished_dialog_title"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>