<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingStart="@dimen/dimen_32dp"
            android:paddingEnd="@dimen/dimen_32dp"
            android:paddingTop="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_16dp"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/text"
                android:layout_width="@dimen/delete_robot_image_width"
                android:layout_height="@dimen/delete_robot_image_height"
                android:src="@drawable/delete"
                app:layout_constraintVertical_chainStyle="packed"/>

        <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/jura_regular"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_height="wrap_content"
                android:text="@string/delete_controller_description"
                android:textAllCaps="true"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
