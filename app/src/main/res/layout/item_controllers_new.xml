<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="viewModel"
                  type="com.revolution.robotics.features.configure.controllers.adapter.ControllersItem"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <View
                android:id="@+id/controllersCard"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:backgroundResource="@{viewModel.isSelected ? viewModel.selectedResource : viewModel.defaultResource}"
                android:onClick="@{()-> viewModel.onItemClicked()}"
                app:layout_constraintDimensionRatio="@dimen/configure_controllers_card_dimen_ratio"
                tools:background="@drawable/configure_controllers_card_bg_red_selector"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_16dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/controllersCard"
                app:layout_constraintBottom_toBottomOf="@id/controllersCard"
                app:layout_constraintStart_toStartOf="@id/controllersCard"
                app:layout_constraintEnd_toEndOf="@id/controllersCard">

            <TextView
                    android:id="@+id/controller_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/configure_controllers_controller_name_margin_top"
                    android:layout_marginStart="@dimen/configure_controllers_controller_content_horizontal_margin"
                    android:layout_marginEnd="@dimen/configure_controllers_controller_content_horizontal_margin"
                    android:gravity="center"
                    android:text="@string/controller_create_new"
                    android:textColor="@color/white"
                    android:fontFamily="@font/jura_bold"
                    android:textSize="@dimen/configure_controllers_name_text_size"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                    android:id="@+id/controller_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/configure_controllers_controller_image_vertical_margin"
                    android:layout_marginBottom="@dimen/configure_controllers_controller_image_vertical_margin"
                    android:layout_marginStart="@dimen/configure_controllers_controller_image_horizontal_margin"
                    android:layout_marginEnd="@dimen/configure_controllers_controller_image_horizontal_margin"
                    android:src="@drawable/ic_add"
                    android:scaleType="fitCenter"
                    app:layout_constraintTop_toBottomOf="@id/controller_name"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
