<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="viewModel"
                  type="com.revolution.robotics.features.configure.controllers.adapter.ControllersItem"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <View
                android:id="@+id/controllersCard"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:backgroundResource="@{viewModel.isSelected ? viewModel.selectedResource : viewModel.defaultResource}"
                android:onClick="@{()-> viewModel.onSelectClicked()}"
                app:layout_constraintDimensionRatio="@dimen/configure_controllers_card_dimen_ratio"
                tools:background="@drawable/configure_controllers_card_bg_red_selector"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_16dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/controllersCard"
                app:layout_constraintBottom_toBottomOf="@id/controllersCard"
                app:layout_constraintStart_toStartOf="@id/controllersCard"
                app:layout_constraintEnd_toEndOf="@id/controllersCard">

            <TextView
                    android:id="@+id/controller_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/configure_controllers_controller_name_margin_top"
                    android:layout_marginStart="@dimen/configure_controllers_controller_content_horizontal_margin"
                    android:layout_marginEnd="@dimen/configure_controllers_controller_content_horizontal_margin"
                    android:gravity="center"
                    android:text="@{viewModel.name}"
                    android:textColor="@color/white"
                    android:fontFamily="@font/jura_bold"
                    android:textSize="@dimen/configure_controllers_name_text_size"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                    android:id="@+id/controller_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/configure_controllers_controller_image_vertical_margin"
                    android:layout_marginBottom="@dimen/configure_controllers_controller_image_vertical_margin"
                    android:layout_marginStart="@dimen/configure_controllers_controller_image_horizontal_margin"
                    android:layout_marginEnd="@dimen/configure_controllers_controller_image_horizontal_margin"
                    tools:src="@drawable/controller_driver"
                    android:scaleType="fitCenter"
                    app:localResource="@{viewModel.normalImageRes}"
                    app:layout_constraintTop_toBottomOf="@id/controller_name"
                    app:layout_constraintBottom_toTopOf="@id/controller_icon"/>

            <ImageView
                    android:id="@+id/controller_icon"
                    android:layout_marginBottom="@dimen/configure_controllers_controller_icon_margin_bottom"
                    android:layout_marginStart="@dimen/configure_controllers_controller_content_horizontal_margin"
                    android:layout_marginEnd="@dimen/configure_controllers_controller_description_horizontal_margin"
                    android:src="@drawable/ic_calendar"
                    android:layout_width="@dimen/configure_controllers_controller_icon_width"
                    android:layout_height="0dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintDimensionRatio="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/controller_icon_description"
                    app:layout_constraintBottom_toTopOf="@id/controllers_icon_bottom_guide"/>

            <TextView
                    android:id="@+id/controller_icon_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.iconDescription}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/configure_controllers_icon_description_text_size"
                    android:fontFamily="@font/barlow_medium"
                    app:layout_constraintTop_toTopOf="@id/controller_icon"
                    app:layout_constraintBottom_toBottomOf="@id/controller_icon"
                    app:layout_constraintStart_toEndOf="@id/controller_icon"
                    app:layout_constraintEnd_toStartOf="@id/controller_info"/>


            <ImageView
                    android:id="@+id/controller_info"
                    android:layout_marginEnd="@dimen/configure_controllers_controller_content_horizontal_margin"
                    android:layout_marginStart="@dimen/configure_controllers_controller_description_horizontal_margin"
                    android:src="@drawable/ic_info"
                    android:background="@drawable/bg_button_default"
                    android:layout_width="@dimen/configure_controllers_controller_icon_width"
                    android:layout_height="0dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintDimensionRatio="1.0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/controller_icon_description"
                    app:layout_constraintTop_toTopOf="@id/controller_icon"
                    app:layout_constraintBottom_toBottomOf="@id/controller_icon"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/controller_image"
                    app:layout_constraintBottom_toTopOf="@id/controllers_buttons_top_guide"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@color/transparent"
                    android:stateListAnimator="@null"
                    android:onClick="@{()->viewModel.onInfoClicked()}"
                    app:layout_constraintStart_toEndOf="@id/controller_icon_description"/>

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/controllers_icon_bottom_guide"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintGuide_percent="@dimen/configure_controllers_controller_icon_bottom_guide"
                    android:orientation="horizontal"/>

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/controllers_buttons_top_guide"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintGuide_percent="@dimen/configure_controllers_controller_buttons_top_guide"
                    android:orientation="horizontal"/>

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/controllers_buttons_bottom_guide"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="@dimen/configure_controllers_controller_buttons_bottom_guide"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="@id/select_button"
                    app:layout_constraintEnd_toEndOf="@id/select_button"
                    app:layout_constraintTop_toTopOf="@id/select_button"
                    app:layout_constraintBottom_toBottomOf="@id/select_button"
                    android:gravity="center"
                    android:elevation="3dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/barlow_medium"
                    android:textSize="@dimen/configure_controllers_select_text_size"
                    android:text="@{viewModel.isCurrentlyActive ? @string/controller_selected : @string/controller_choose_this}"/>

            <Button
                    android:id="@+id/select_button"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/ic_controllers_select_button_bg_selector"
                    android:layout_marginStart="@dimen/configure_controllers_controller_card_border_margin"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintHorizontal_weight="1"
                    app:visible="@{!viewModel.isCurrentlyActive}"
                    android:onClick="@{()-> viewModel.onSelectClicked()}"
                    android:stateListAnimator="@null"
                    app:layout_constraintTop_toTopOf="@id/controllers_buttons_top_guide"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/edit_button"
                    app:layout_constraintBottom_toBottomOf="@id/controllers_buttons_bottom_guide"/>

            <Button
                    android:id="@+id/edit_button"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/ic_your_robots_button_bg_selector"
                    app:layout_constraintDimensionRatio="1.0"
                    android:layout_marginStart="@dimen/configure_controllers_controller_card_border_margin"
                    android:onClick="@{()-> viewModel.onEditClicked()}"
                    android:stateListAnimator="@null"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintTop_toTopOf="@id/controllers_buttons_top_guide"
                    app:layout_constraintStart_toEndOf="@id/select_button"
                    app:layout_constraintEnd_toStartOf="@id/delete_button"
                    app:layout_constraintBottom_toBottomOf="@id/controllers_buttons_bottom_guide"/>

            <Button
                    android:id="@+id/delete_button"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/ic_your_robots_clipped_button_bg_selector"
                    app:layout_constraintDimensionRatio="1.0"
                    android:layout_marginStart="@dimen/configure_controllers_controller_card_border_margin"
                    android:layout_marginEnd="@dimen/configure_controllers_controller_card_border_margin"
                    android:onClick="@{()-> viewModel.onDeleteClicked()}"
                    android:stateListAnimator="@null"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintTop_toTopOf="@id/controllers_buttons_top_guide"
                    app:layout_constraintStart_toEndOf="@id/edit_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/controllers_buttons_bottom_guide"/>

            <ImageView
                    android:layout_width="@dimen/configure_controllers_controller_button_icon_size"
                    android:layout_height="@dimen/configure_controllers_controller_button_icon_size"
                    android:src="@drawable/ic_edit"
                    android:scaleType="fitCenter"
                    android:tint="@{@color/white}"
                    android:elevation="3dp"
                    app:layout_constraintStart_toStartOf="@id/edit_button"
                    app:layout_constraintEnd_toEndOf="@id/edit_button"
                    app:layout_constraintTop_toTopOf="@id/edit_button"
                    app:layout_constraintBottom_toBottomOf="@id/edit_button"/>

            <ImageView
                    android:layout_width="@dimen/configure_controllers_controller_button_icon_size"
                    android:layout_height="@dimen/configure_controllers_controller_button_icon_size"
                    android:src="@drawable/ic_delete"
                    android:scaleType="fitCenter"
                    android:tint="@color/white"
                    android:elevation="3dp"
                    app:layout_constraintStart_toStartOf="@id/delete_button"
                    app:layout_constraintEnd_toEndOf="@id/delete_button"
                    app:layout_constraintTop_toTopOf="@id/delete_button"
                    app:layout_constraintBottom_toBottomOf="@id/delete_button"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
