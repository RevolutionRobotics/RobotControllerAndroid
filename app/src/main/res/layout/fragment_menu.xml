<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="com.revolution.robotics.mainmenu.MainMenuViewModel"/>
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <View
                android:id="@+id/header_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_height"
                android:background="@color/gray_28"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_border_size"
                android:scaleType="fitXY"
                android:src="@drawable/bg_header_menu"
                app:layout_constraintTop_toBottomOf="@id/header_background"/>

        <ImageView
                android:id="@+id/img_logo"
                android:layout_width="@dimen/toolbar_icon_size"
                android:layout_height="@dimen/toolbar_icon_size"
                android:padding="@dimen/dimen_small"
                app:layout_constraintTop_toTopOf="@id/header_background"
                app:layout_constraintBottom_toBottomOf="@id/header_background"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/dimen_large"
                android:layout_marginTop="@dimen/dimen_small"
                android:src="@drawable/ic_logo"
                android:onClick="@{() -> viewModel.onRoboticsIconClicked()}"/>

        <ImageView
                android:layout_width="@dimen/toolbar_icon_size"
                android:layout_height="@dimen/toolbar_icon_size"
                android:padding="@dimen/dimen_small"
                app:layout_constraintTop_toTopOf="@id/header_background"
                app:layout_constraintBottom_toBottomOf="@id/header_background"
                app:layout_constraintRight_toLeftOf="@id/img_logo"
                android:layout_marginEnd="@dimen/dimen_xlarge"
                android:src="@drawable/ic_community"
                android:onClick="@{() -> viewModel.onCommunityIconClicked()}"/>


        <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_border_size"
                android:scaleType="fitXY"
                android:src="@drawable/bg_bottom_footer"
                app:layout_constraintBottom_toTopOf="@id/bottom_header_background"/>


        <View
                android:id="@+id/bottom_header_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/footer_height"
                android:background="@color/gray_28"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
                android:id="@+id/btn_robots"
                android:layout_width="120dp"
                android:layout_height="158dp"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btn_coding"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:onClick="@{() -> viewModel.onRobotsClicked()}"
                android:text="@string/menu_robots"/>

        <Button
                android:id="@+id/btn_coding"
                android:layout_width="120dp"
                android:layout_height="158dp"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toRightOf="@id/btn_robots"
                app:layout_constraintRight_toLeftOf="@id/btn_challenges"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:onClick="@{() -> viewModel.onCodingClicked()}"
                android:text="@string/menu_coding"/>

        <Button
                android:id="@+id/btn_challenges"
                android:layout_width="120dp"
                android:layout_height="158dp"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toRightOf="@id/btn_coding"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:onClick="@{() -> viewModel.onChallengesClicked()}"
                android:text="@string/menu_challenges"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
