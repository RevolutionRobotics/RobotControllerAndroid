<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="com.revolution.robotics.features.mainmenu.MainMenuViewModel"/>
        <variable name="toolbarViewModel" type="com.revolution.robotics.features.mainmenu.MainMenuToolbarViewModel"/>
        <variable name="tutorialViewModel" type="com.revolution.robotics.features.mainmenu.tutorial.TutorialViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.revolution.robotics.views.toolbar.RoboticsToolbar
                android:id="@+id/toolbar"
                app:viewModel="@{toolbarViewModel}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"/>

        <include
                layout="@layout/include_main_menu_button"
                android:id="@+id/btn_robots"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:viewModel="@{viewModel.robotButton}"
                app:layout_constraintDimensionRatio="H,3:4"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_coding"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintBottom_toTopOf="@id/bottom_border"
                android:layout_margin="@dimen/dimen_32dp"/>

        <include
                layout="@layout/include_main_menu_button"
                android:id="@+id/btn_coding"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:viewModel="@{viewModel.codingButton}"
                app:layout_constraintDimensionRatio="H,3:4"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/btn_robots"
                app:layout_constraintEnd_toStartOf="@id/btn_challenges"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintBottom_toTopOf="@id/bottom_border"
                android:layout_margin="@dimen/dimen_32dp"
                android:text="@string/menu_coding"/>

        <include
                layout="@layout/include_main_menu_button"
                android:id="@+id/btn_challenges"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:viewModel="@{viewModel.challengesButton}"
                app:layout_constraintDimensionRatio="H,3:4"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/btn_coding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintBottom_toTopOf="@id/bottom_border"
                android:layout_margin="@dimen/dimen_32dp"
                android:text="@string/menu_challenges"/>

        <ImageView
                android:id="@+id/bottom_border"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_menu_header_border_size"
                android:scaleType="fitXY"
                android:src="@drawable/bg_bottom_footer"
                app:layout_constraintBottom_toTopOf="@id/bottom_header_background"/>

        <View
                android:id="@+id/bottom_header_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_menu_footer_height"
                android:background="@color/grey_28"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <View android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#AA000000"/>

        <include
                layout="@layout/item_tutorial"
                android:id="@+id/item_tutorial_robots"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintStart_toEndOf="@id/btn_robots"
                android:layout_width="212dp"
                app:tutorialItem="@{tutorialViewModel.tutorialItems.get(0)}"
                android:layout_height="191dp"/>

        <View
                android:id="@+id/tutorial_step3"
                android:layout_width="@dimen/dimen_10dp"
                android:layout_height="@dimen/dimen_10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/dimen_32dp"
                app:selected="@{tutorialViewModel.tutorialItems.get(2).isActive()}"
                android:background="@drawable/tutorial_circle"/>

        <View
                android:id="@+id/tutorial_step2"
                android:layout_width="@dimen/dimen_10dp"
                android:layout_height="@dimen/dimen_10dp"
                app:layout_constraintEnd_toStartOf="@id/tutorial_step3"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/dimen_32dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                app:selected="@{tutorialViewModel.tutorialItems.get(1).isActive()}"
                android:background="@drawable/tutorial_circle"/>

        <View
                android:id="@+id/tutorial_step4"
                android:layout_width="@dimen/dimen_10dp"
                android:layout_height="@dimen/dimen_10dp"
                app:layout_constraintStart_toEndOf="@id/tutorial_step3"
                android:layout_marginStart="@dimen/dimen_10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/dimen_32dp"
                app:selected="@{tutorialViewModel.tutorialItems.get(3).isActive()}"
                android:background="@drawable/tutorial_circle"/>

        <View
                android:id="@+id/tutorial_step1"
                android:layout_width="@dimen/dimen_10dp"
                android:layout_height="@dimen/dimen_10dp"
                app:layout_constraintEnd_toStartOf="@id/tutorial_step2"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/dimen_32dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                app:selected="@{tutorialViewModel.tutorialItems.get(0).isActive()}"
                android:background="@drawable/tutorial_circle"/>

        <View
                android:id="@+id/tutorial_step5"
                android:layout_width="@dimen/dimen_10dp"
                android:layout_height="@dimen/dimen_10dp"
                app:layout_constraintStart_toEndOf="@id/tutorial_step4"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/dimen_32dp"
                android:layout_marginStart="10dp"
                app:selected="@{tutorialViewModel.tutorialItems.get(4).isActive()}"
                android:background="@drawable/tutorial_circle"/>

        <ImageView
                android:layout_width="@dimen/dimen_32dp"
                android:layout_height="@dimen/dimen_32dp"
                android:padding="@dimen/dimen_8dp"
                android:tint="@{tutorialViewModel.isPreviousButtonEnabled ? @color/white : @color/grey_8e}"
                app:layout_constraintEnd_toStartOf="@id/tutorial_step1"
                android:layout_marginEnd="@dimen/dimen_24dp"
                app:layout_constraintTop_toTopOf="@id/tutorial_step1"
                app:layout_constraintTop_toBottomOf="@id/tutorial_step1"
                android:onClick="@{() -> tutorialViewModel.onPreviousButtonClicked()}"
                android:layout_marginBottom="@dimen/dimen_32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_tutorial_back"/>

        <ImageView
                android:layout_width="@dimen/dimen_32dp"
                android:layout_height="@dimen/dimen_32dp"
                android:padding="@dimen/dimen_8dp"
                android:tint="@{tutorialViewModel.isNextButtonEnabled ? @color/white : @color/grey_8e}"
                app:layout_constraintStart_toEndOf="@id/tutorial_step5"
                android:layout_marginStart="@dimen/dimen_24dp"
                app:layout_constraintTop_toTopOf="@id/tutorial_step5"
                app:layout_constraintTop_toBottomOf="@id/tutorial_step5"
                android:layout_marginBottom="32dp"
                android:onClick="@{() -> tutorialViewModel.onNextButtonClicked()}"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_tutorial_next"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
