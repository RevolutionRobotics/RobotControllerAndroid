<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <merge>

        <ImageView
                android:id="@+id/img_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_32dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/ic_successful"/>

        <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/build_chapter_finish_dialog_title"
                android:fontFamily="@font/jura_regular"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/img_success"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/dimen_16dp"/>

        <TextView
                android:id="@+id/txt_descriptiopn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/build_chapter_finish_dialog_description"
                android:fontFamily="@font/jura_bold"
                android:textSize="14sp"
                android:textAllCaps="true"
                app:layout_constraintTop_toBottomOf="@id/txt_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/dimen_4dp"/>


    </merge>
</layout>