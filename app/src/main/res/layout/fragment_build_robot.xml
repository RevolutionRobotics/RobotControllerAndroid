<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="toolbarViewModel" type="com.revolution.robotics.features.build.BuildRobotToolbarViewModel"/>
        <variable name="viewModel" type="com.revolution.robotics.features.build.BuildRobotViewModel"/>
        <variable name="background" type="com.revolution.robotics.views.chippedBox.ChippedBoxConfig"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.revolution.robotics.views.toolbar.RoboticsToolbar
                android:id="@+id/toolbar"
                app:viewModel="@{toolbarViewModel}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/toolbar_body_bottom"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintGuide_begin="@dimen/toolbar_header_height"
                android:orientation="horizontal"/>

        <ImageView
                android:id="@+id/bluetooth_icon"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:scaleType="centerInside"
                android:padding="@dimen/dimen_2dp"
                android:src="@drawable/ic_bluetooth"
                app:layout_constraintTop_toTopOf="@id/toolbar"
                app:layout_constraintBottom_toBottomOf="@id/toolbar_body_bottom"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/dimen_8dp"
                android:onClick="@{() -> viewModel.onBluetoothIconClicked()}"
                app:greyscale="@{!viewModel.isBluetoothConnected}"/>

        <TextView
                android:id="@+id/steps"
                android:layout_width="@dimen/build_robot_parts_size"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:gravity="center"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@id/toolbar"
                app:layout_constraintBottom_toBottomOf="@id/toolbar_body_bottom"
                app:layout_constraintEnd_toEndOf="@id/bluetooth_icon"
                android:text="@{viewModel.step}"
                android:layout_marginEnd="@dimen/dimen_8dp"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_glow"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <com.revolution.robotics.views.slider.BuildStepSliderView
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginEnd="@dimen/dimen_16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <com.github.chrisbanes.photoview.PhotoView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/seekbar"
                android:scaleType="centerInside"
                app:animate="@{true}"
                app:firebaseImageUrl="@{viewModel.imageUrl}"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/parts_wrapper"
                android:layout_width="@dimen/build_robot_parts_size"
                android:layout_height="@dimen/build_robot_parts_size"
                app:layout_constraintStart_toStartOf="@id/steps"
                app:layout_constraintEnd_toEndOf="@id/steps"
                app:layout_constraintTop_toBottomOf="@id/steps"
                android:layout_marginTop="9dp"
                app:chippedBoxConfig="@{background}"
                android:paddingTop="@dimen/dimen_16dp"
                android:paddingBottom="@dimen/dimen_16dp"
                android:paddingStart="@dimen/dimen_32dp"
                android:paddingEnd="@dimen/dimen_32dp">

            <ImageView
                    android:id="@+id/parts_image"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:scaleType="centerInside"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:firebaseImageUrl="@{viewModel.partsImage}"
                    app:errorDrawable="@{@drawable/ic_image_not_found_dark}"
                    app:layout_constraintBottom_toTopOf="@+id/parts_quantity"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/parts_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.partsQuantity}"
                    android:textSize="17sp"
                    android:fontFamily="@font/barlow_regular"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/parts_image"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
                android:id="@+id/parts_pin"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="@dimen/dimen_8dp"
                android:src="@drawable/build_robot_parts_pin"
                app:layout_constraintTop_toBottomOf="@id/steps"
                android:layout_marginTop="@dimen/dimen_2dp"
                app:layout_constraintStart_toStartOf="@id/parts_wrapper"
                app:layout_constraintEnd_toEndOf="@id/parts_wrapper"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
