<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/nav_graph" app:startDestination="@id/mainMenuFragment">

    <fragment android:id="@+id/mainMenuFragment"
              android:name="com.revolution.robotics.mainmenu.MainMenuFragment"
              android:label="MainMenuFragment">
        <action android:id="@+id/toCoding" app:destination="@id/codingFragment"/>
        <action android:id="@+id/toChallenges"
                app:destination="@id/challengesFragment"/>
        <action android:id="@+id/toRobots" app:destination="@id/robotsFragment"/>
    </fragment>

    <fragment android:id="@+id/codingFragment" android:name="com.revolution.robotics.coding.CodingFragment"
              android:label="CodingFragment"/>
    <fragment android:id="@+id/challengesFragment" android:name="com.revolution.robotics.challenges.ChallengesFragment"
              android:label="ChallengesFragment"/>
    <fragment android:id="@+id/robotsFragment" android:name="com.revolution.robotics.robots.RobotsFragment"
              android:label="RobotsFragment"/>
</navigation>
